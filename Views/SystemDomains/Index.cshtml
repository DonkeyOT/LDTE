@model IEnumerable<LDTE_Web.Models.SystemDomain>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">System Domains</h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemDomainName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemDomainTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemDomainImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemDomainFooter)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SystemDomainDefaultAction)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SystemDomainName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SystemDomainTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SystemDomainImage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SystemDomainFooter)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SystemDomainDefaultAction)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SystemDomainID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SystemDomainID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SystemDomainID })
                        </td>
                    </tr>
                }

            </table>
        </div>
        
      
    </div>
    <!-- /.row -->
  
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
